<div class="feedback-panel">
    <div class="feedback-list">
        #foreach ($feedback in $feedbackList)
            <div class="feedback-item">
                <p class="feedback-text">$feedback</p>
            </div>
        #end
    </div>
</div>

<style type="text/css">
    .feedback-panel {
        padding: 10px;
        border: 1px solid #DFE1E6;
        border-radius: 3px; 
        background-color: #F4F5F7;
        margin-bottom: 20px;
    }

    .feedback-title {
        font-size: 14px;
        font-weight: bold;
        margin-bottom: 10px;
        color: #172B4D; 
    }

    .feedback-list {
        max-height: 300px;
        overflow-y: auto;
        padding-right: 10px;
    }

    .feedback-item {
        padding: 8px;
        border: 1px solid #DFE1E6; 
        border-radius: 3px;
        background-color: #FFFFFF; 
        margin-bottom: 8px; 
        box-shadow: 0 1px 2px rgba(0, 0, 0, 0.1);
    }

    .feedback-item:last-child {
        margin-bottom: 0; 
    }

    .feedback-text {
        font-size: 12px;
        color: #42526E; 
        margin: 0;
    }

    .feedback-list::-webkit-scrollbar {
        width: 8px;
    }

    .feedback-list::-webkit-scrollbar-track {
        background: #F4F5F7; 
        border-radius: 3px;
    }

    .feedback-list::-webkit-scrollbar-thumb {
        background: #A5ADBA;
        border-radius: 3px;
    }

    .feedback-list::-webkit-scrollbar-thumb:hover {
        background: #7A869A;
    }
</style>
